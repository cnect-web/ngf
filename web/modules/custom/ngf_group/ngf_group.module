/**
 * Implements hook_help().
 */
function ngf_group_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ngf_group module.
    case 'help.page.ngf_group':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
